# ==============================================
# SHOE BANK - Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=5000
NODE_ENV=development

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/shoebank

# OR MongoDB Atlas (Cloud Database)
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/shoebank?retryWrites=true&w=majority

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Generate a secure random string (minimum 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# ==============================================
# CLOUDINARY CONFIGURATION
# ==============================================
# Sign up at https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=abcdefghijklmnopqrstuvwxyz

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# OPTION 1: Mailtrap (Development/Testing)
# Sign up at https://mailtrap.io
MAILTRAP_HOST=sandbox.smtp.mailtrap.io
MAILTRAP_PORT=2525
MAILTRAP_USER=your-mailtrap-username
MAILTRAP_PASS=your-mailtrap-password

# OPTION 2: Gmail (Production)
# Enable 2FA and generate App Password at https://myaccount.google.com/apppasswords
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-16-character-app-password

# OPTION 3: SendGrid (Production)
# Get API key at https://sendgrid.com
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASS=your-sendgrid-api-key

# Email From Address
EMAIL_FROM=noreply@shoebank.lk

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
# Frontend URL for CORS (Development)
FRONTEND_URL=http://localhost:5173

# Production Frontend URL
# FRONTEND_URL=https://shoebank.lk

# ==============================================
# OTP CONFIGURATION
# ==============================================
# OTP expiration time in minutes
OTP_EXPIRES_IN=10
OTP_LENGTH=6

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
# Maximum file size in MB
MAX_FILE_SIZE=5
MAX_FILES_PER_PRODUCT=5

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# PAYMENT GATEWAY (Future Implementation)
# ==============================================
# PayHere.lk Configuration
# PAYHERE_MERCHANT_ID=your-merchant-id
# PAYHERE_MERCHANT_SECRET=your-merchant-secret
# PAYHERE_CURRENCY=LKR
# PAYHERE_SANDBOX=true

# ==============================================
# LOGGING & MONITORING (Future Implementation)
# ==============================================
# LOG_LEVEL=info
# SENTRY_DSN=your-sentry-dsn

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
# Default admin credentials (for initial setup)
ADMIN_EMAIL=admin@shoebank.lk
ADMIN_PASSWORD=ChangeThisPassword123!
